<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:gravity="center_vertical"
    android:noHistory="true"
    android:orientation="vertical"
    tools:context="com.example.mladen.xwsclient.activity.HomeScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/webshop" />

    <Button
        android:id="@+id/kupi_proizvod"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left_right_edit"
        android:layout_marginRight="@dimen/margin_left_right_edit"
        android:layout_marginTop="30dp"
        android:background="@color/button_text_color"
        android:text="Kupi proizvode"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/dobavi_izvod"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left_right_edit"
        android:layout_marginRight="@dimen/margin_left_right_edit"
        android:layout_marginTop="10dp"
        android:background="@color/button_text_color"
        android:text="Dobavi izvod"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/prethodna_placanja"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left_right_edit"
        android:layout_marginRight="@dimen/margin_left_right_edit"
        android:layout_marginTop="10dp"
        android:background="@color/button_text_color"
        android:text="Prethodna placanja"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>